{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuickNote",
  "version": "0.1.0",
  "identifier": "ai.quicknote.portable",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../dist",
    "distDir": "../dist"
  },
  "package": {
    "productName": "QuickNote",
    "version": "0.1.0"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "QuickNote - Portable Knowledge Pocket",
        "width": 900,
        "height": 650,
        "resizable": true,
        "minWidth": 700,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": null,
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    },
    "longDescription": "A portable knowledge keeper that runs without admin rights",
    "resources": [],
    "category": "Productivity",
    "externalBin": []
  }
}
